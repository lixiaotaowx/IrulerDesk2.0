[Unit]
Description=WebSocket Screen Stream Server
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/websocket_server_standalone
ExecStart=/opt/websocket_server_standalone/build/bin/WebSocketServer --port 8765
Restart=always
RestartSec=5

# 环境变量
Environment=QT_QPA_PLATFORM=offscreen

[Install]
WantedBy=multi-user.target